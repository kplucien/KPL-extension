<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View duplication"
        Width="350" ResizeMode="NoResize" SizeToContent="Height" Height="250
        ">
    <StackPanel Margin="10">
        <Label Content="Element id" Margin="0,0,0,10" />
        <TextBox x:Name="elementid" Height="28" FontSize="18" FontWeight="Light" VerticalContentAlignment="Center" Padding="10,0,10,0" Text="123"/>
        <Label Content="Scope box offset:" Margin="0,0,0,10" />
        <TextBox x:Name="offset" Height="28" FontSize="18" FontWeight="Light" VerticalContentAlignment="Center" Padding="10,0,10,0" Text="300"/>
        <Button Content="Run!" Height="33" Margin="0,10,0,0" Click="scopebox" />
    </StackPanel>
</Window>